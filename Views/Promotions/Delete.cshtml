@model Mercadona4.Models.Promotion

@{
    ViewData["Title"] = "Supprimer une promotion - tableau de bord - Mercadona";
}

<h2>Supprimer une promotion</h2>

<a class="returnbutton" asp-action="Index">Retour</a>

<h3 style="text-align: center;">Êtes-vous sûr de vouloir supprimer cette promotion ?</h3>
<form asp-action="Delete">
    <table style="width: 98%">
        <tr>
            <th>Début de la promotion</th>
            <td>@Html.DisplayFor(model => model.StartDate)</td>
        </tr>
        <tr>
            <th>Fin de la promotion</th>
            <td>@Html.DisplayFor(model => model.EndDate)</td>
        </tr>
        <tr>
            <th>Pourcentage de réduction</th>
            <td>-@Model.DiscountPercentage.ToString()%</td>
        </tr>
    </table>

    <input type="hidden" asp-for="Id" />
    <input class="delbutton" type="submit" value="Supprimer" />
</form>
